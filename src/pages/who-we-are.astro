---
export const prerender = true;

import Layout from "../layouts/Layout.astro";
import NavigationBar from "../components/NavigationBar.astro";
import PillShapeLink from "../components/PillShapeLink.astro";
import Footer from "../components/Footer.astro";
import EmployeeAndFreelancerSection from "../components/EmployeeAndFreelancerSection.astro";
---

<Layout
  title="In Trend | Who we are"
  description="Made up of free thinkers and deep thinkers, we have spent more than a decade to find the most talented beauty experts in key countries all around the world. All our reports are written by a winning combination of market experts and pro beauty experts."
>
  <NavigationBar variant="beige" />

  <EmployeeAndFreelancerSection />

  <section>
    <div class="grid md:grid-cols-2">
      <div class="flex items-center justify-end bg-carrot-200 px-4 py-8">
        <div class="mx-auto max-w-lg md:mr-16">
          <h2 class="text-center text-3xl font-bold text-brown-600">
            Hang Out IRL
          </h2>
          <p class="mt-6 text-center text-brown-600">
            Come hang out in our London office: The Innovation hub of the UK in
            London's coolest neighbourhood* Hackney Wick.
          </p>
          <div class="mt-6 text-center">
            <PillShapeLink
              variant="dark"
              title="Come hang out"
              href="https://calendly.com/aj-intrend/30min"
            />
          </div>
        </div>
      </div>
      <div>
        <!-- TODO: get this thing in 4K -->
        <img
          src="/images/who-we-are/hang-out-irl/here-east.jpg"
          alt=""
          class="h-full w-full object-cover"
        />
      </div>
    </div>
  </section>

  <Footer />
</Layout>
